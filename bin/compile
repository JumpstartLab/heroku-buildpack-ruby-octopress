#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

puts "Hello from the BuildPack"
redis_url = `cat #{ARGV[2]}/REDISTOGO_URL`.strip
`$REDISTOGO_URL=#{redis_url}`
puts "redis url: #{ENV['REDISTOGO_URL']}"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end
