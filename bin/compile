#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

puts "Hello from the BuildPack"
redis_url = `cat #{ARGV[2]}/REDISTOGO_URL`.strip
puts "read redis url: #{redis_url}"
puts `export REDISTOGO_URL='#{redis_url}'`
puts "env redis url: #{ENV['REDISTOGO_URL']}"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end
